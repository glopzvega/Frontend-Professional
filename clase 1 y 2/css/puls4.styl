azul = #22bce0
naranja = #E64B09
gris_oscuro = #444444

@font-face {
	font-family: 'icon_fonts';
	src:url('../fonts/icomoon.eot?k7x92h');
	src:url('../fonts/icomoon.eot?#iefixk7x92h') format('embedded-opentype'),
		url('../fonts/icomoon.woff?k7x92h') format('woff'),
		url('../fonts/icomoon.ttf?k7x92h') format('truetype'),
		url('.//fonts/icomoon.svg?k7x92h#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	background #e8e8e8;
	color #444444
	font-family Arial
	font-size: 16px;

a 
	color #E64B09


footer
	background naranja
	color rgba(white, 0.5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

	.mejor
		
		&:before
		&:after
			content " - "

header
	background gris_oscuro
	color #ffffff
	padding 0.5em	
	position relative
	overflow hidden
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 2

	.logo
		border-right 1px solid #22bce0
		width 60px
		float left
		img
			width 50px

	.titular
		margin 0px 80px 0 70px


		.titulo
			font-size 18px
			font-weight normal
			padding 0
			margin 0

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color #ffffff	
			font-style italic
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black	
			float right	

			&:before
				content "\e600"
				font-family "icon_fonts"
				text-shadow none
				display inline-block
				margin 0 3px 0 0


	.usuario
		position absolute
		top 10px
		right 10px
		.avatar			
			img
				width 50px
				border-radius 50%
				margin 0 1.1em 0 0
				position relative 
				z-index 2

		.flechita
			background #E64B09
			position absolute
			top 15px
			right 0
			color #ffffff
			z-index 0
			display block
			text-align right
			width 50%
			padding 2px
			text-decoration none

			&:before
				display block
				margin 1px 0 0 1px
				font-family icon_fonts
				content "\e602"
				text-shadow 1px 1px 0px black

	
nav
	background azul	
	border-left 15px solid white
	position relative

	&:before
		border-top 20px solid transparent
		border-bottom 20px solid transparent
		border-left 7px solid white		
		content ""
		position absolute
		top 0
		left 0

	.menu
		height 40px
		line-height 40px		
		margin 0
		padding 0		
		overflow-x auto
		white-space nowrap

		&::-webkit-scrollbar
			display none

		li			
			display inline-block			
			a
				border 0px solid red
				color white
				text-decoration none
				display block
					padding 0 0.2em
				margin 0 0.5em

.posts
	padding 0.5em
	.post
		color gray
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		margin-bottom 0.5em

		.acciones
			border-top 3px solid azul
			padding 0.5em			
			overflow hidden

			.datos
				float right
				vertical-align middle				

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white					
					margin 0 1em 0 0.1em
					padding 2px 5px
					text-decoration none
					position relative
					text-align center

					&:after											
						margin 0 0 0 18px
						content ""
						display block
						position absolute												
						border-left 4px solid transparent
						border-right 4px solid transparent
						border-top 5px solid gris_oscuro						


				.estrellita					
					text-decoration none
					&:after
						font-family icon_fonts
						font-size 1.1em						

						content "\e601"

			.votos
				float left

				.down
				.up
					text-decoration none					
					&:before
						font-family icon_fonts
						font-size 1.5em
						vertical-align middle					

				.down 
					color red					
					&:before
						content "\e602"

				.up
					color green					
					&:before
						content "\e603"
						

		.descripcion
			
			overflow hidden
			
			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0

				.tag
					background azul
					color white
					text-decoration none
					border-radius 0.5em
					padding 0.2em 0.5em

				.fecha
					float right
					margin 0 1em 0 0					

				.titulo
					color black
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				float left
				img
					height 160px
					width 120px
					vertical-align top

@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				font-size 1.1em
				padding-left 3em
				position relative
				&:before
					font-size 2.5em
					left 0
					position absolute
					top -10px


	.posts
		.post
			display inline-block
			vertical-align top
			width 48%			
			&:nth-child(odd)
				margin-right 2%
